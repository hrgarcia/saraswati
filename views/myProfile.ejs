<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <title>Datos de perfil</title>
        <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />

        <!--     Fonts and icons     -->
        <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />

        <!-- Iconos Font Awesome -->
        <script src="https://kit.fontawesome.com/c49c6935a4.js" crossorigin="anonymous"></script>

        <!-- Bootstrap -->
        <link rel="stylesheet" href="/css/bootstrap.min.css" />

        <!-- CSS Files -->
        <link href="/stylesheets/material-dashboard.css?v=2.1.2" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css" />

        <link rel="stylesheet" href="/stylesheets/style.css" />

        <%- include('fragment/background'); -%>
    </head>

    <body>
        <%- include('fragment/sidebar'); -%>
        <div class="main-panel">
            <%- include('fragment/navbar'); -%>
            <div class="content">
                <div class="main-body">
                    <div class="container emp-profile">
                        <div class="row">
                            <div class="col-md-4">
                                <div style="margin-top: 23%" class="card card-profile">
                                    <div class="profile-img">
                                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150" />
                                    </div>
                                    <% data[0].forEach(function(Profile){ %>
                                    <div class="card-body">
                                        <h4 class="card-title"><%-Profile['nombreUsuario'] %></h4>
                                        <p class="card-description">Don't be scared of the truth because we need to restart, Kanye..</p>
                                    </div>
                                    <% }); %>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="card">
                                    <div class="card-header card-header-primary">
                                        <h4 class="card-title">Informacion personal</h4>
                                        <p class="card-category">Escuela Experimental Pro-A</p>
                                    </div>
                                    <div class="card-body">
                                        <div id="test1">
                                            <form id="profileForm" method="post">
                                                <% data[1].forEach(function(Profile){ %>
                                                <div>
                                                    <table>
                                                        <tr>
                                                            <td class="profileTd" width="20%">Nombre:</td>
                                                            <td class="profileTd" width="50%"><input class="inputCantEditing" type="text" name="nombre" readonly onmousedown="return false;" value="<%-Profile['nombre']%>" /></td>
                                                        </tr>
                                                        <tr>
                                                            <td class="profileTd" width="20%">Apellido:</td>
                                                            <td class="profileTd" width="50%"><input class="inputCantEditing" type="text" name="apellido" readonly onmousedown="return false;" value="<%-Profile['apellido']%>" /></td>
                                                        </tr>
                                                        <tr>
                                                            <td class="profileTd" width="20%">Email:</td>
                                                            <td class="profileTd" width="50%"><input class="inputCanEditing" type="email" name="email" value="<%-Profile['email']%>" placeholder="<%-Profile['email']%>" /></td>
                                                        </tr>
                                                        <tr>
                                                            <td class="profileTd" width="20%">Telefono:</td>
                                                            <td class="profileTd" width="50%"><input class="inputCanEditing" type="text" name="telefono" value="<%-Profile['telefono']%>" placeholder="<%-Profile['telefono']%>" /></td>
                                                        </tr>
                                                        <tr>
                                                            <td class="profileTd" width="20%">Género:</td>
                                                            <td class="profileTd" width="50%"><input class="inputCanEditing" type="text" name="genero" value="<%-Profile['genero']%>" placeholder="<%-Profile['genero']%>" /></td>
                                                        </tr>
                                                        <tr>
                                                            <td class="profileTd" width="20%">DNI:</td>
                                                            <td class="profileTd" width="50%"><input class="inputCantEditing" type="text" name="dni" readonly onmousedown="return false;" value="<%-Profile['dni']%>" /></td>
                                                        </tr>
                                                        <tr>
                                                            <td class="profileTd" width="20%">Nacimiento:</td>
                                                            <td class="profileTd" width="50%"><input class="inputCantEditing" type="text" name="nacimiento" readonly onmousedown="return false;" value="<%-Profile['nacimiento']%>" /></td>
                                                        </tr>
                                                    </table>
                                                </div>

                                                <% }); %> <% for(let i = 1; i <= rol.length; i++) { %>

                                                <!-- Admin -->
                                                <% if (rol[i-1] == 'administrador') { %>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="bmd-label-floating">adminisitrador</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>

                                                <!-- preceptor -->
                                                <% if (rol[i-1] == 'preceptor') { %>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="bmd-label-floating">preceptor</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>

                                                <!-- profesor -->
                                                <% if (rol[i-1] == 'profesor') { %> <% data[i].forEach(function(Profile){ %>
                                                <table>
                                                    <tr>
                                                        <td class="profileTd" width="22.5%">Ingreso:</td>
                                                        <td class="profileTd" width="50%"><input class="inputCantEditing" type="text" name="ingreso" readonly onmousedown="return false;" value="<%-Profile['ingreso']%>" /></td>
                                                    </tr>
                                                    <tr>
                                                        <td class="profileTd" width=22.5%">Estado:</td>
                                                        <td class="profileTd" width="50%"><input class="inputCantEditing" type="text" name="estado" readonly onmousedown="return false;" value="<%-Profile['estado']%>" /></td>
                                                    </tr>
                                                </table>
                                                <% }); %> <% } %>
                                                <!-- estudiante -->
                                                <% if (rol[i-1] == 'estudiante') { %> <% data[i].forEach(function(Profile){ %>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="bmd-label-floating">Curso: <input style="text-align: center" type="text" name="curso" readonly onmousedown="return false;" value="<%-Profile['descripcion_curso']%>" /></label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }); %> <% } %> <% } %>
                                            </form>
                                            <br />
                                            <button id="saveChange">Guardar cambios</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('fragment/footer'); -%>
        </div>
        <%- include('fragment/scripts'); -%>
    </body>

    <!-- jquery/jqueryValidate -->
    <script src="/javascripts/core/jquery.min.js"></script>
    <script src="javascripts/jquery.validate.min.js" type="text/javascript"></script>

    <!-- Own SweetAlert2 -->
    <script src="/javascripts/sweetAlerts.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Validation -->
    <script>
        $("#profileForm").validate({
            rules: {
                email: {
                    required: true,
                    email: true,
                },
                telefono: {
                    required: true,
                    minlength: 10,
                    maxlength: 10,
                },
                genero: {
                    required: true,
                    minlength: 5,
                    maxlength: 12,
                },
                avatar: {
                    required: true,
                },
            },
            messages: {
                email: {
                    required: "Ingrese un email",
                    email: "Ingrese un email con el formato correcto",
                },
                telefono: {
                    required: "Ingrese un telefono",
                    minlength: "El telefono es muy corta",
                    maxlength: "El telefono es muy grande",
                },
                genero: {
                    required: "Ingrese un género",
                    minlength: "El género es muy corta",
                    maxlength: "El género es muy grande",
                },
                avatar: {
                    required: "ingrese un avatar",
                },
            },
        });

        $("#saveChange").on("click", function (e) {
            if ($("#profileForm").valid()) {
                e.preventDefault();
                let aux = $("#test1 input:not([readonly])");
                let aux2 = {};
                let flag = false;
                for (let i = aux.length - 1; i >= 0; i--) {
                    if (aux[i].placeholder == aux[i].value) {
                        aux.splice(i,1);
                    }
                    else{
                        aux2[aux[i].name] = aux[i].value;
                        flag = true;
                    }
                }
                if (flag) {
                    aux2 = JSON.stringify(aux2);
                    console.log("hubo modificaciones");
                    $.ajax({
                        url: "/changeInfoProfile",
                        method: "post",
                        dataType: "json",
                        data: { info: `${aux2}` },
                    }).done((d) => {
                        for (let i = 0; i < aux.length; i++) {
                            console.log(aux[i].placeholder)
                            console.log(aux2);
                            aux[i].placeholder = JSON.parse(aux2)[aux[i].name]
                        }
                        if (d === "infoUpdated") {
                            successAlert("Su informacion fue actualizada");
                        } else if (d === "infoNotUpdated") {
                            errorAlert("Su informacion no pudo ser actualizada");
                        }
                    });
                } else {
                    errorAlert("No se modifico ningun dato");
                }
            }
        });
    </script>
</html>
