                                        </form>
                                    </div>
                                </div>
                                <div class="filter"></div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <% } %>

                    <!-- Contenido para el dashboard estudiante -->
                    <% if (rol[i] == 'estudiante') { %>
                    <p>Cosas del estudiante ac치</p>
                    <% } %> <% } %>
                    </div>
            </div>
            <%- include('fragment/footer'); -%>
        </div>

