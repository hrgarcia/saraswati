                                                        <a class="uk-form-icon" style="pointer-events: none; margin-top: 5px" href="#" uk-icon="icon: grid"></a>
                                                        <input
                                                            name="telefono"
                                                            class="uk-input uk transform-origin: 0px 0px; -form-width-medium inputCanEditing profileTd uk-form-width-large"
                                                            type="text"
                                                            readonly
                                                            onmousedown="return false;"
                                                            style="border: solid 2px #d2d2d2"
                                                            value="<%-Profile['estado']%>"
                                                            placeholder="<%-Profile['estado']%>"
                                                        />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                                <% }); %> <% } %>
                                                <!-- estudiante -->
                                                <% if (rol[i-1] == 'estudiante') { %> <% data[i].forEach(function(Profile){ %>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="bmd-label-floating">Curso: <input style="text-align: center" type="text" name="curso" readonly onmousedown="return false;" value="<%-Profile['descripcion_curso']%>" /></label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }); %> <% } %> <% } %>
                                            </form>
                                            <br />
                                        </div>
                                    </div>
                                    <button class="uk-button btn btn-danger" id="saveChange">Guardar cambios</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
            </div>
            <a href="#" uk-totop uk-scroll style="float: right; color: #fff"></a>
        </div>
        <%- include('fragment/footer'); -%> <%- include('fragment/scripts'); -%>
    </body>

    <!-- jquery/jqueryValidate -->
    <script src="/javascripts/core/jquery.min.js"></script>
    <script src="javascripts/jquery.validate.min.js" type="text/javascript"></script>

    <!-- Own SweetAlert2 -->
    <script src="/javascripts/sweetAlerts.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Estilo de la datatable -->
    <script src="/javascripts/uikit.min.js"></script>
    <script src="/javascripts/uikit-icons.min.js"></script>

    <!-- wea -->
    <script>
        var bar = document.getElementById("js-progressbar");

        UIkit.upload(".js-upload", {
            url: "subirFotos",

            allow: "*.(jpg|jpeg|gif|png)",
            param: "file[]",
            beforeSend: function () {
                console.log("beforeSend", arguments);
            },
            beforeAll: function () {
                console.log("beforeAll", arguments);
            },
            load: function () {
                console.log("load", arguments);
            },
            error: function () {
                console.log("error", arguments);
            },
            complete: function () {
                console.log("complete", arguments);
            },

            loadStart: function (e) {
                console.log("loadStart", arguments);

                bar.removeAttribute("hidden");
                bar.max = e.total;
                bar.value = e.loaded;
            },

            progress: function (e) {
                console.log("progress", arguments);

                bar.max = e.total;
                bar.value = e.loaded;
            },

            loadEnd: function (e) {
                console.log("loadEnd", arguments);

                bar.max = e.total;
                bar.value = e.loaded;
            },

            completeAll: function () {
                console.log("completeAll", arguments);

                setTimeout(function () {
                    bar.setAttribute("hidden", "hidden");
                }, 1000);

                alert("Upload Completed");
            },
        });
    </script>

    <!-- Validation -->
    <script>
        $("#avatarForm").validate({
            rules: {
                document: {
                    required: true,
                },
            },
            messages: {
                document: {
                    required: "Ingrese un avatar",
                },
            },
        });

        $("#profileForm").validate({
            rules: {
                email: {
                    required: true,
                    email: true,
                },
                telefono: {
                    required: true,
                    minlength: 10,
                    maxlength: 10,
                },
                genero: {
                    required: true,
                    minlength: 5,
                    maxlength: 12,
                },
                avatar: {
                    required: true,
                },
            },
            messages: {
                email: {
                    required: "Ingrese un email",
                    email: "Ingrese un email con el formato correcto",
                },
                telefono: {
                    required: "Ingrese un telefono",
                    minlength: "El telefono es muy corta",
                    maxlength: "El telefono es muy grande",
                },
                genero: {
                    required: "Ingrese un género",
                    minlength: "El género es muy corta",
                    maxlength: "El género es muy grande",
                },
                avatar: {
                    required: "ingrese un avatar",
                },
            },
        });

        function reloadPage() {
            location.reload();
        }

        // Avatar ajax
        $("#saveAvatar").on("click", function (e) {
            if ($("#avatarForm").valid()) {
                // e.preventDefault();
                let data = new FormData($("#avatarForm")[0]);

                $.ajax({
                    url: "/subirFotos",
                    type: "post",
                    dataType: "json",
                    data: data,
                    cache: false,
                    contentType: false,
                    processData: false,
                }).done((d) => {
                    if (d === "overToSize") {
                        errorAlert("La imagen supera los 2 megas de tamaño");
                    } else if (d === "invalidType") {
                        errorAlert("El archivo que intenta subir no es una imagen");
                    } else if (d === "updatedAvatar") {
                        // successAlert("Imagen actualizada");
                        Swal.fire({
                            icon: "success",
                            title: "Imagen actualizada",
                            showConfirmButton: false,
                            timer: 1500,
                            timerProgressBar: true,
                            toast: true,
                            position: "top-end",
                        });
                        setTimeout(reloadPage, 2000);
                    }
                });
            }
        });

        // Change info of MiPerfil ajax
        $("#saveChange").on("click", function (e) {
            if ($("#profileForm").valid()) {
                e.preventDefault();
                let aux = $("#test1 input:not([readonly])");
                let aux2 = {};
                let flag = false;
                for (let i = aux.length - 1; i >= 0; i--) {
                    if (aux[i].placeholder == aux[i].value) {
                        aux.splice(i, 1);
                    } else {
                        aux2[aux[i].name] = aux[i].value;
                        flag = true;
                    }
                }
                if (flag) {
                    aux2 = JSON.stringify(aux2);
                    console.log("hubo modificaciones");
                    $.ajax({
                        url: "/cambiarInfoPerfil",
                        method: "post",
                        dataType: "json",
                        data: { info: `${aux2}` },
                    }).done((d) => {
                        for (let i = 0; i < aux.length; i++) {
                            aux[i].placeholder = JSON.parse(aux2)[aux[i].name];
                        }
                        if (d === "infoUpdated") {
                            successAlert("Su informacion fue actualizada");
                        } else if (d === "infoNotUpdated") {
                            errorAlert("Su informacion no pudo ser actualizada");
                        }
                    });
                } else {
                    errorAlert("No se modifico ningun dato");
                }
            }
        });
    </script>
