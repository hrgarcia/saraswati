                                                        <div class="form-group">
                                                            <label class="bmd-label-floating">adminisitrador</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>

                                                <!-- preceptor -->
                                                <% if (rol[i-1] == 'preceptor') { %>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="bmd-label-floating">preceptor</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>

                                                <!-- profesor -->
                                                <% if (rol[i-1] == 'profesor') { %> <% data[i].forEach(function(Profile){ %>
                                                <div class="col-sm-10 col-sm-offset-1" align="center">
