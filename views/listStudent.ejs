            const listApproved = document.getElementById("listApproved");
            const listProgress = document.getElementById("listProcess");
            const listPending = document.getElementById("listPending");
            var deleteLearnings = [];

            Sortable.create(listApproved, {
                group: {
                    name: "statuslearning",
