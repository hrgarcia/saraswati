    <body>
        <div class="main-panel" data-value="<%-username%>" id="main-panel">
            <div class="container">
                <%- include('fragment/navbar'); -%>
                <!--   Big container   -->
                <br />
                <br />
                <br />
                <br />
                <div class="cardStudent wizard-card" data-color="orange" id="wizardProfile">
                    <form action="/agregar" method="post" id ="addTeacher" >
                        <!--        You can switch " data-color="orange" "  with one of the next bright colors: "blue", "green", "orange", "red", "azure"          -->

                        <div class="wizard-header text-center">
                            <h3 class="wizard-title">Crea el perfil</h3>
                            <p class="category"></p>
                        </div>

                        <div class="wizard-navigation">
                            <div class="progress-with-circle">
                                <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="3" style="width: 21%"></div>
                            </div>
                            <ul>
                                <li>
                                    <a href="#about" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="ti-user"></i>
                                        </div>
                                        Crear usuario
                                    </a>
                                </li>
                                <li>
                                    <a href="#account" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="ti-settings"></i>
                                        </div>
                                        Información personal
                                    </a>
                                </li>
                                <li>
                                    <a href="#address" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="ti-map"></i>
                                        </div>
                                        Materias
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content" >
                            <div class="tab-pane" id="about">
                                <div class="row">
                                    <h5 class="info-text">Please tell us more about yourself.</h5>
                                    <div class="col-sm-10 col-sm-offset-1" align="center">
                                        <div class="form-group">
                                            <label>Nombre Usuario <small>obligatorio</small></label>
                                            <br />
                                            <input name="nickname" id="nombreUsuario"class="uk-input uk-form-width-large" type="text" placeholder="Juan" />
                                        </div>
                                        <div class="form-group">
                                            <label>Nombre <small>obligatorio</small></label>
                                            <br />
                                            <input name="firstname" id= "Nombre" class="uk-input uk-form-width-large" type="text" placeholder="Juan" />
                                        </div>
                                        <div class="form-group">
                                            <label>Apellido <small>obligatorio</small></label>
                                            <br />
                                            <input name="lastname" id="Apellido" class="uk-input uk-form-width-large" type="text" placeholder="Gomez" />
                                        </div>
                                    </div>
                                    <div class="col-sm-10 col-sm-offset-1" align="center">
                                        <div class="form-group">
                                            <label>Email <small>obligatorio</small></label>
                                            <br />
                                            <input name="email" id="Gmail" class="uk-input uk-form-width-large" type="email" placeholder="example@email.com" />
                                        </div>
                                    </div>
                                    <div class="col-sm-10 col-sm-offset-1" align="center">
                                        <div class="form-group">
                                            <label>Ingreso <small>obligatorio</small></label>
                                            <br />
                                            <input name="Ingreso" id="Ingreso" class="uk-input uk-form-width-large" type="date" placeholder="11/08/2003" />
                                        </div>
                                    </div>
                                </div>
                                <input type="button"  id= "First"class="btn btn-next  btn-fill btn-warning btn-wd d-grid gap-2 d-md-flex justify-content-md-end" name="siguiente" value="Siguiente" />
                            </div>
                            <div class="tab-pane" id="account">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <h5 class="info-text"></h5>
                                    </div>
                                    <div class="col-sm-7 col-sm-offset-1">
                                        <div class="form-group">
                                            <label>Fecha de nacimiento</label>
                                            <input type="date" id="nacimiento" name="fecha_nacimiento" class="form-control" placeholder="10/12/2003" />
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label>DNI</label>
                                            <input type="text" id="dni" class="form-control" placeholder="323232" name="dni" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5 col-sm-offset-1">
                                        <div class="form-group">
                                            <label>Número de teléfono</label>
                                            <input type="text" id="telefono" class="form-control" placeholder="35135..." name="telefono" />
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group">
                                            <label>Genéro</label><br />
                                            <select name="genero" id="genero" class="form-control">
                                                <option value="Masculino">Masculino</option>
                                                <option value="Femenino">Femenino</option>
                                                <option value="Indefinido">Indefinido</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-group">
                                            <label>Estado</label><br />
                                            <select name="Estado" id="estado class="form-control">
                                                <option value="Titular">Titular</option>
                                                <option value="Suplente">Suplente</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <input type="button" id= "second" class="btn btn-next  btn-fill btn-warning btn-wd d-grid gap-2 d-md-flex justify-content-md-end" name="siguiente" value="Siguiente" />

                            </div>
                            <div class="tab-pane" id="address">
                                <div class="row">
                                    <% data.forEach(function(Materias){ %>
                                    <div class="col-sm-4">
                                        <div class="choice" data-toggle="wizard-checkbox">
                                            <input type="checkbox" class="inputCheckbox" name="jobb" value="<%- Materias["nombreMateria"] %>" />
                                            <div class="card card-checkboxes card-hover-effect">
                                                <i class="fas fa-graduation-cap"></i>
                                                <p><%- Materias["nombreMateria"] %></p>
                                                <% data.forEach(function(Materias){ %>
                                                <div class="col-sm-4">
                                                    <div class="choice" data-toggle="wizard-checkbox">
                                                        <input type="checkbox" name="jobb" value="Design" />
                                                        <div class="card card-checkboxes card-hover-effect">
                                                            <i class="fas fa-graduation-cap"></i>
                                                            <p><%- Materias["nombreMateria"] %></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }); %>
                                            </div>
                                            <input type="button" id= "third" class="btn btn-finish btn-fill btn-warning btn-wd" name="cargar" value="Cargar" />
                                            <input type="button" class="btn btn-previous btn-default btn-wd" name="volver" value="Volver" />  
                                        </div>
            
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                </div>
                            </div>

                    </form>
                </div>
            </div>
            <%- include('fragment/footer'); -%>
        </div>
        <%- include('fragment/scripts'); -%>
    </body>
