        <!-- Uikit -->
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.6.22/dist/js/uikit.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.6.22/dist/js/uikit-icons.min.js"></script>

        <script>
            var info;
            var courseSelect;
            var subjectsSelect;

            var $courseSelect = $("#course");
            var $subjectsSelect = $("#subjects");
            var $studentSelect = $("#student");

            $(document).ready(function () {
                $courseSelect.select2({
                    placeholder: "Seleccione un curso",
                    allowClear: true,
                });
                $subjectsSelect.select2({
                    placeholder: "Seleccione una materia",
                    allowClear: true,
                });
                $studentSelect.select2({
                    placeholder: "Seleccione un estudiante",
                    allowClear: true,
                });
            });

            function setter(aux) {
                info = aux;
            }

            window.onload = () => {
                $.get("obtenerEstadisiticasEstudiates", function (res) {
                    setter(res);
                    let aux = Object.keys(res);
                    for (let i = 0; i < aux.length; i++) {
                        let newOption = new Option(aux[i], aux[i], false, false);
                        $courseSelect.append(newOption);
                    }
                });
            };

            $courseSelect.on("change", function (e) {
                $subjectsSelect.empty();
                $studentSelect.empty();

                courseSelect = $(e.currentTarget).val();

                // Add the options for the subjects button
                let lastOption;
                for (let i = 0; i < info[courseSelect].length; i++) {
                    if (info[courseSelect][i].subject != lastOption) {
                        let newOption = new Option(info[courseSelect][i].subject, info[courseSelect][i].subject, true, true);
                        $subjectsSelect.append(newOption);
                        lastOption = info[courseSelect][i].subject;
                    }
                }

                // Show the graph with the data I have
            });
            $subjectsSelect.on("change", function (e) {
                $studentSelect.empty();
                subjectsSelect = $(e.currentTarget).val();

                // Add the options for the students button
                for (let i = 0; i < info[courseSelect].length; i++) {
                    if (info[courseSelect][i].subject == subjectsSelect) {
                        console.log("hola");
                        let newOption = new Option(info[courseSelect][i].nombre + " " + info[courseSelect][i].apellido, info[courseSelect][i].dni, true, true);
                        $studentSelect.append(newOption);
                    }
                }
                // Show the graph with the data I have
            });
            $studentSelect.on("change", function (e) {
                console.log("cambie de estudiante");
                // Show the graph with the data I have
            });

            let ctx = document.getElementById("myChart").getContext("2d");
            let myChart = new Chart(ctx, {
                type: "bar",
                data: {
                    labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
                    datasets: [
                        {
                            label: "# of Votes",
                            data: [12, 19, 3, 5, 2, 3],
                            backgroundColor: ["rgba(255, 99, 132, 0.2)", "rgba(54, 162, 235, 0.2)", "rgba(255, 206, 86, 0.2)", "rgba(75, 192, 192, 0.2)", "rgba(153, 102, 255, 0.2)", "rgba(255, 159, 64, 0.2)"],
                            borderColor: ["rgba(255, 99, 132, 1)", "rgba(54, 162, 235, 1)", "rgba(255, 206, 86, 1)", "rgba(75, 192, 192, 1)", "rgba(153, 102, 255, 1)", "rgba(255, 159, 64, 1)"],
                            borderWidth: 1,
                        },
                    ],
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true,
                        },
                    },
                },
            });
        </script>
